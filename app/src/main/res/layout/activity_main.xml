<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideInset"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_beep"
        android:layout_width="98dp"
        android:layout_height="68dp"
        android:layout_marginTop="172dp"
        android:text="鸣笛"
        app:layout_constraintEnd_toStartOf="@+id/btn_right"
        app:layout_constraintStart_toEndOf="@+id/btn_left"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_spdcon"
        android:layout_width="98dp"
        android:layout_height="68dp"
        android:layout_marginTop="388dp"
        android:text="调整速度"
        app:layout_constraintEnd_toEndOf="@+id/btn_left"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="98dp"
        android:layout_height="68dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="172dp"
        android:text="左转"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_modes"
        android:layout_width="98dp"
        android:layout_height="68dp"
        android:layout_marginTop="388dp"
        android:text="切换模式"
        app:layout_constraintEnd_toStartOf="@+id/btn_right"
        app:layout_constraintStart_toEndOf="@+id/btn_left"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_lock"
        android:layout_width="98dp"
        android:layout_height="68dp"
        android:layout_marginTop="388dp"
        android:text="上锁/解锁"
        app:layout_constraintStart_toStartOf="@+id/btn_right"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="488dp"
        android:lines="8"
        android:maxLines="10"
        android:minLines="3"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_bwd"
        android:layout_width="98dp"
        android:layout_height="68dp"
        android:layout_marginTop="272dp"
        android:text="后退"
        app:layout_constraintEnd_toStartOf="@+id/btn_right"
        app:layout_constraintStart_toEndOf="@+id/btn_left"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="98dp"
        android:layout_height="68dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="12dp"
        android:text="右转"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_fwd"
        android:layout_width="98dp"
        android:layout_height="68dp"
        android:layout_marginTop="80dp"
        android:text="前进"
        app:layout_constraintEnd_toStartOf="@+id/btn_right"
        app:layout_constraintStart_toEndOf="@+id/btn_left"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/textSlogan"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        android:autoLink="web"
        android:autoText="false"
        android:editable="true"
        android:ems="10"
        android:inputType="textUri"
        android:text="基于 https://github.com/gtf35/BLESerial"
        app:layout_constraintBottom_toTopOf="@+id/btn_fwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>